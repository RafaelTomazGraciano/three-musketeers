#include <stdio.tm>

int main() {
    int a;
    int b;
    int *p;
    
    a = 10;
    b = 20;
    
    p = &a;
    printf("Pointer to a:\n");
    printf("Value: %d\n", (*p));
    
    (*p) = 15;
    printf("After (*p) = 15:\n");
    printf("a = %d\n", a);
    
    p = &b;
    printf("\nPointer to b:\n");
    printf("Value: %d\n", (*p));
    
    (*p) = 25;
    printf("After (*p) = 25:\n");
    printf("b = %d\n", b);
    
    // Chain of assignments
    (*p) = (*p) + 10;
    printf("\nAfter (*p) = (*p) + 10:\n");
    printf("b = %d\n", b);
    printf("(*p) = %d\n", (*p));
    
    return 0;
}