#include <stdio.tm>

int main() {
    double temperatures[7];
    int i;
    
    // Initialize with temperature values
    temperatures[0] = 23.5;
    temperatures[1] = 25.0;
    temperatures[2] = 22.8;
    temperatures[3] = 24.3;
    temperatures[4] = 26.1;
    temperatures[5] = 23.9;
    temperatures[6] = 25.5;
    
    // Print temperatures
    printf("Weekly temperatures:\n");
    for (i = 0; i < 7; i = i + 1) {
        printf("Day %d: %.2f°C\n", i + 1, temperatures[i]);
    }
    
    // Calculate average
    double sum;
    sum = 0.0;
    for (i = 0; i < 7; i = i + 1) {
        sum = sum + temperatures[i];
    }
    double average;
    average = sum / 7.0;
    printf("Average temperature: %.2f°C\n", average);
    
    // Find max temperature
    double max;
    max = temperatures[0];
    for (i = 1; i < 7; i = i + 1) {
        if (temperatures[i] > max) {
            max = temperatures[i];
        }
    }
    printf("Maximum temperature: %.2f°C\n", max);
    
    return 0;
}