#include <stdio.tm>

int main() {
    int matrix[3][4];
    int i;
    int j;
    
    // Initialize matrix with sequential values
    int value;
    value = 1;
    for (i = 0; i < 3; i = i + 1) {
        for (j = 0; j < 4; j = j + 1) {
            matrix[i][j] = value;
            value = value + 1;
        }
    }
    
    // Print matrix
    printf("Matrix 3x4:\n");
    for (i = 0; i < 3; i = i + 1) {
        for (j = 0; j < 4; j = j + 1) {
            printf("%d ", matrix[i][j]);
        }
        printf("\n");
    }
    
    // Calculate row sums
    printf("\nRow sums:\n");
    for (i = 0; i < 3; i = i + 1) {
        int rowSum;
        rowSum = 0;
        for (j = 0; j < 4; j = j + 1) {
            rowSum = rowSum + matrix[i][j];
        }
        printf("Row %d sum: %d\n", i, rowSum);
    }
    
    // Calculate column sums
    printf("\nColumn sums:\n");
    for (j = 0; j < 4; j = j + 1) {
        int colSum;
        colSum = 0;
        for (i = 0; i < 3; i = i + 1) {
            colSum = colSum + matrix[i][j];
        }
        printf("Column %d sum: %d\n", j, colSum);
    }
    
    // Transpose representation
    printf("\nTranspose:\n");
    for (j = 0; j < 4; j = j + 1) {
        for (i = 0; i < 3; i = i + 1) {
            printf("%d ", matrix[i][j]);
        }
        printf("\n");
    }
    
    return 0;
}