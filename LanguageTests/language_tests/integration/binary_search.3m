#include <stdio.tm>

int binarySearchRecursive(int* arr, int left, int right, int target) {
    int mid;
    
    if (right >= left) {
        mid = left + (right - left) / 2;
        
        if (arr[mid] == target) {
            return mid;
        }
        
        if (arr[mid] > target) {
            return binarySearchRecursive(arr, left, mid - 1, target);
        }
        
        return binarySearchRecursive(arr, mid + 1, right, target);
    }
    
    return -1;
}

int binarySearchIterative(int* arr, int n, int target) {
    int left;
    int right;
    int mid;
    
    left = 0;
    right = n - 1;
    
    while (left <= right) {
        mid = left + (right - left) / 2;
        
        if (arr[mid] == target) {
            return mid;
        }
        
        if (arr[mid] < target) {
            left = mid + 1;
        } else {
            right = mid - 1;
        }
    }
    
    return -1;
}

int main() {
    int arr[10];
    int n;
    int result;
    int i;
    
    printf("=== Binary Search Test ===\n\n");
    
    arr[0] = 2;
    arr[1] = 5;
    arr[2] = 8;
    arr[3] = 12;
    arr[4] = 16;
    arr[5] = 23;
    arr[6] = 38;
    arr[7] = 45;
    arr[8] = 56;
    arr[9] = 67;
    n = 10;
    
    printf("Sorted array:\n");
    for (i = 0; i < n; i = i + 1) {
        printf("%d ", arr[i]);
    }
    printf("\n\n");
    
    printf("Testing Recursive Binary Search:\n");
    
    result = binarySearchRecursive(arr, 0, n - 1, 23);
    printf("Search for 23: Found at index %d\n", result);
    
    result = binarySearchRecursive(arr, 0, n - 1, 2);
    printf("Search for 2: Found at index %d\n", result);
    
    result = binarySearchRecursive(arr, 0, n - 1, 67);
    printf("Search for 67: Found at index %d\n", result);
    
    result = binarySearchRecursive(arr, 0, n - 1, 100);
    printf("Search for 100: %d (not found)\n", result);
    
    printf("\nTesting Iterative Binary Search:\n");
    
    result = binarySearchIterative(arr, n, 16);
    printf("Search for 16: Found at index %d\n", result);
    
    result = binarySearchIterative(arr, n, 45);
    printf("Search for 45: Found at index %d\n", result);
    
    result = binarySearchIterative(arr, n, 1);
    printf("Search for 1: %d (not found)\n", result);
    
    result = binarySearchIterative(arr, n, 50);
    printf("Search for 50: %d (not found)\n", result);
    
    return 0;
}